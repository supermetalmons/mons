{
  "name": "mons-dot-link",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@rainbow-me/rainbowkit": "^2.2.4",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@tanstack/react-query": "^5.90.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "ajv": "^8.18.0",
    "ajv-keywords": "^5.1.0",
    "buffer": "^6.0.3",
    "ethers": "^6.16.0",
    "firebase": "^12.9.0",
    "glicko2": "^1.2.1",
    "mons-web": "^0.1.98",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-icons": "^5.5.0",
    "react-scripts": "5.0.1",
    "siwe": "^3.0.0",
    "solana-connect": "^0.1.11",
    "styled-components": "^6.3.11",
    "typescript": "^5.9.3",
    "viem": "^2.46.2",
    "wagmi": "^2.15.6",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && node scripts/removeDevAssets.js",
    "deploy:functions": "npm --prefix cloud/functions install && cd cloud && firebase deploy --only functions",
    "deploy:wagers": "npm --prefix cloud/functions install && cd cloud && firebase deploy --only functions:sendWagerProposal,functions:acceptWagerProposal,functions:cancelWagerProposal,functions:declineWagerProposal,functions:resolveWagerOutcome",
    "deploy": "npm run deploy:functions",
    "latest:root": "npx --yes npm-check-updates@latest -u --peer --reject wagmi,@rainbow-me/rainbowkit && npm install --legacy-peer-deps",
    "latest:functions": "npx --yes npm-check-updates@latest -u --peer --packageFile cloud/functions/package.json && npm install --prefix cloud/functions",
    "latest:admin": "npx --yes npm-check-updates@latest -u --peer --packageFile cloud/admin/package.json && npm install --prefix cloud/admin",
    "latest": "npm run latest:root && npm run latest:functions && npm run latest:admin"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-mixed-operators": [
        "error",
        {
          "groups": [
            [
              "&&",
              "||"
            ]
          ],
          "allowSamePrecedence": true
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11"
  }
}
